<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_pawsbg_profile"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/design_3" />

    <TextView
        android:id="@+id/tv_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Edit Profile."
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/gl_left_edit"
        app:layout_constraintTop_toTopOf="@+id/gl_top_edit" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="35dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="35dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="72dp" />

    <EditText
        android:id="@+id/et_name_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Max"
        android:inputType="text"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_edit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_name_edit"
        app:layout_constraintTop_toBottomOf="@+id/et_gender_edit" />

    <EditText
        android:id="@+id/et_gender_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#000000"
        android:editable="false"
        android:ems="10"
        android:hint="Male"
        android:inputType="none"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_edit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_gender_edit"
        app:layout_constraintTop_toBottomOf="@+id/tv_edit_title" />

    <EditText
        android:id="@+id/et_breed_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Shih Tzu"
        android:inputType="text"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_edit"
        app:layout_constraintStart_toEndOf="@+id/tv_breed_edit"
        app:layout_constraintTop_toBottomOf="@+id/et_name_edit" />

    <EditText
        android:id="@+id/et_description_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:ems="10"
        android:hint="Your pet's bio"
        android:inputType="text"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_edit"
        app:layout_constraintStart_toEndOf="@+id/tv_description_edit"
        app:layout_constraintTop_toBottomOf="@+id/et_birthday_edit" />

    <EditText
        android:id="@+id/et_birthday_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#000000"
        android:editable="false"
        android:ems="10"
        android:hint="12/30/18"
        android:inputType="none"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_edit"
        app:layout_constraintStart_toEndOf="@+id/tv_birthday_edit"
        app:layout_constraintTop_toBottomOf="@+id/et_breed_edit" />

    <ImageView
        android:id="@+id/btn_home_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_black" />

    <TextView
        android:id="@+id/tv_gender_edit"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_gender_edit"
        app:layout_constraintStart_toStartOf="@+id/gl_left_edit"
        app:layout_constraintTop_toTopOf="@+id/et_gender_edit" />

    <TextView
        android:id="@+id/tv_name_edit"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Dog Name"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_name_edit"
        app:layout_constraintStart_toStartOf="@+id/gl_left_edit"
        app:layout_constraintTop_toTopOf="@+id/et_name_edit" />

    <TextView
        android:id="@+id/tv_breed_edit"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Breed"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_breed_edit"
        app:layout_constraintStart_toStartOf="@+id/gl_left_edit"
        app:layout_constraintTop_toTopOf="@+id/et_breed_edit" />

    <TextView
        android:id="@+id/tv_birthday_edit"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Birthday"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_birthday_edit"
        app:layout_constraintStart_toStartOf="@+id/gl_left_edit"
        app:layout_constraintTop_toTopOf="@+id/et_birthday_edit" />

    <TextView
        android:id="@+id/tv_description_edit"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_description_edit"
        app:layout_constraintStart_toStartOf="@+id/gl_left_edit"
        app:layout_constraintTop_toTopOf="@+id/et_description_edit" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:width="300sp"
        android:height="60dp"
        android:backgroundTint="#333333"
        android:text="edit"
        android:textColorHighlight="#878583"
        android:textColorLink="#121111"
        app:cornerRadius="20sp"
        app:layout_constraintEnd_toStartOf="@+id/gl_right_edit"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/gl_left_edit"
        app:layout_constraintTop_toBottomOf="@+id/et_description_edit" />


    <ProgressBar
        android:id="@+id/pb_edit"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/progress"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>